<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gonevas.com">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/gonevas_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/gonevas_app_logo"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        <activity android:name=".activity.SearchFormActivity"></activity>
        <activity
            android:name=".MainActivity2"
            android:label="@string/title_activity_main2" />
        <activity android:name=".activity.SplashActivity" />
        <activity android:name=".activity.SearchResultsActivity" />
        <activity android:name=".activity.CategoryActivity" />
        <activity android:name=".activity.OrderActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.OrdersActivity" />
        <activity android:name=".activity.PhoneVerificationActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.SubmitOrderActivity" />
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CartActivity" />
        <activity
            android:name=".activity.ProductActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>